{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "addresses": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        },
                        "street": {
                            "type": "string"
                        },
                        "postalCode": {
                            "type": "string"
                        },
                        "country": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "type",
                        "street",
                        "postalCode",
                        "country"
                    ]
                }
            ]
        }
    },
    "required": [
        "name",
        "addresses"
    ]
}